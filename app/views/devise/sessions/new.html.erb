<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3 cust-pad-top">
      <div class="panel panel-login">
        <div class="panel-heading">
          <div class="row">
            <div class="col-xs-12">
              <a href="#" class="active" id="login-form-link">Login</a>
            </div>
            </div>
          <hr>
        </div>
        <div class="panel-body">
          <div class="row">
            <div class="col-lg-12">
              <%= form_for(resource,  as: resource_name, url: session_path(resource_name), html: { id: "login_user" }) do |f| %>
              <div class="form-group">
                <%= f.email_field :email, autofocus: true, class: 'form-control', placeholder: "Email...",tabindex: "1"%>
              </div>
              <div class="form-group">
                <%= f.password_field :password, autocomplete: "off", placeholder: "Password", class: "form-control",tabindex: "2"%>
              </div>
              <% if devise_mapping.rememberable? -%>
              <div class="form-group text-center">
                <%= f.check_box :remember_me, tabindex: "3"%>
                <%= f.label :remember_me %>
              </div>
              <% end -%>
              <div class="form-group">
                <div class="row">
                  <div class="col-sm-6 col-sm-offset-3">
                    <%= f.submit "Log in", tabindex: "4" ,class: "form-control btn btn-login", value: "Log In" %>
                  </div>
                </div>
              </div>
              <div class="form-group">
                <div class="row">
                  <div class="col-lg-12">
                    <div class="text-center">
                      <a href="#" tabindex="5" class="forgot-password">Forgot Password?</a>
                    </div>
                  </div>
                </div>
              </div>
              <%end%>
           </div>
         </div>
       </div>
     </div>
   </div>
 </div>
</div>
