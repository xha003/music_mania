<br>
<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <div class="panel panel-login">
        <div class="panel-heading">
          <div class="row">
            <div class="col-xs-6">
              <a href="#" class="active" id="login-form-link">Login</a>
            </div>
            <div class="col-xs-6">
              <a href="#" id="register-form-link">Register</a>
            </div>
          </div>
          <hr>
        </div>
        <div class="panel-body">
          <div class="row">
            <div class="col-lg-12">
              <%= form_for(resource,  as: resource_name, url: session_path(resource_name), html: { id: "login_user" }) do |f| %>
              <div class="form-group">
                <%= f.email_field :email, autofocus: true, class: 'form-control', placeholder: "Email...",tabindex: "1"%>
              </div>
              <div class="form-group">
                <%= f.password_field :password, autocomplete: "off", placeholder: "Password", class: "form-control",tabindex: "2"%>
              </div>
              <% if devise_mapping.rememberable? -%>
              <div class="form-group text-center">
                <%= f.check_box :remember_me, tabindex: "3"%>
                <%= f.label :remember_me %>
              </div>
              <% end -%>
              <div class="form-group">
                <div class="row">
                  <div class="col-sm-6 col-sm-offset-3">
                    <%= f.submit "Log in", tabindex: "4" ,class: "form-control btn btn-login", value: "Log In" %>
                  </div>
                </div>
              </div>
              <div class="form-group">
                <div class="row">
                  <div class="col-lg-12">
                    <div class="text-center">
                      <a href="#" tabindex="5" class="forgot-password">Forgot Password?</a>
                    </div>
                  </div>
                </div>
              </div>
              <%end%>
<!-- this is for registration -->
              <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {style: "display: none;"}) do |f| %>
              <%= devise_error_messages! %>

              <div class="form-group">
                <%= f.label :email %><br />
                <%= f.email_field :email, autofocus: true %>
              </div>

              <div class="form-group">
                <%= f.label :password %>
                <% if @validatable %>
                <em>(<%= @minimum_password_length %> characters minimum)</em>
                <% end %><br />
                <%= f.password_field :password, autocomplete: "off" %>
              </div>

              <div class="form-group">
                <%= f.label :password_confirmation %><br />
                <%= f.password_field :password_confirmation, autocomplete: "off" %>
              </div>
              <div class="form-group">
                <%= f.label :first_name %><br />
                <%= f.text_field :first_name, autocomplete: "off" %>
              </div>
              <div class="form-group">
                <%= f.label :last_name %><br />
                <%= f.text_field :last_name, autocomplete: "off" %>
              </div>

              <div class="form-group">
                <%= f.label :nick_name %><br />
                <%= f.text_field :last_name, autocomplete: "off" %>
              </div>
              <div class="form-group">
                <div class="row">
                  <div class="col-sm-6 col-sm-offset-3">
                   <%= f.submit "Sign up" %>
                 </div>
               </div>
             </div>
             <% end -%>
           </div>
         </div>
       </div>
     </div>
   </div>
 </div>
</div>

<script type="text/javascript">
$('#login-form-link').click(function(e) {
  $("#login_user").delay(100).fadeIn(100);
  $("#new_user").fadeOut(100);
  $('#register-form-link').removeClass('active');
  $(this).addClass('active');
  e.preventDefault();
});
$('#register-form-link').click(function(e) {
  $("#new_user").delay(100).fadeIn(100);
  $("#login_user").fadeOut(100);
  $('#login-form-link').removeClass('active');
  $(this).addClass('active');
  e.preventDefault();
});
</script>