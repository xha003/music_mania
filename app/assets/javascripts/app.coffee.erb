music_mania = angular.module('music_mania', [
  'templates',
  'ngRoute',
  'ngResource',
  'controllers'
])

music_mania.config([ '$routeProvider',
  ($routeProvider)->
    $routeProvider
      .when('/',
        templateUrl: "index.html"
        controller: 'UsersController'
      )
      .when('/:id',
        templateUrl: 'show.html'
        controller: 'UsersController'
      )
])

controllers = angular.module('controllers',[])
controllers.controller("UsersController", [ '$scope', '$routeParams', '$location', '$resource',
  ($scope, $routeParams, $location, $resource)->
    $scope.search = (keywords)->  $location.path("/").search('keywords',keywords)
    User = $resource('/users/:userId', { userId: "@id", format: 'json' })
    if $routeParams.keywords
      keywords = $routeParams.keywords.toLowerCase()
      User.query(keywords: $routeParams.keywords, (results)-> $scope.users = results)
    else
      $scope.users = []
])
