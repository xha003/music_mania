controllers = angular.module('controllers')
controllers.controller("UsersController", [ '$scope', '$routeParams', '$location', 'User',
  ($scope,$routeParams,$location,User)->
    $scope.search = (keywords) -> $scope.users = User.query(keywords: keywords)
    
    if $routeParams.keywords 
      User.query(keywords: $routeParams.keywords, (results)-> $scope.users = results)
    else
      $scope.users = []
    $scope.view = (userId)-> $location.url("/users/#{userId}")
])
