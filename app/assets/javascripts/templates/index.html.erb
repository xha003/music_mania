<section class="row search_bar">
  <form>
    <div class="form-group col-md-6 col-md-offset-3 search_div">
      <label for="keywords" class="sr-only">Keywords</label>
      <input ng-model='keywords' name='keywords' type="text" autofocus class="form-control search_field" placeholder="User name. Example: Xha">
	  <button ng-click="search(keywords)" class="btn btn-primary btn-raised search_button"><i class="glyphicon glyphicon-search"></i> Search</button>
    </div>
  </form>
</section>
<br/>
<section class="row" ng-if="users.length">
  <ul class='list-unstyled'>
    <li	ng-repeat='user in users'>
      <section class="well">
        <h3 class="h3" style="margin-top: 0"><a href ng-click="view(user.id)">{{user.full_name}}</a></h1>
      </section>
      <br/>
    </li>
  </ul>
</section>
